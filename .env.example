# AI-Shu Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Database (Supabase)
# =============================================================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# AI Services
# =============================================================================

# OpenAI API (for GPT-4 chat and Whisper STT)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ElevenLabs API (for high-quality text-to-speech)
# Get from: https://elevenlabs.io/api
# Optional - falls back to browser TTS if not configured
NEXT_PUBLIC_ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# =============================================================================
# Video and Avatar Services
# =============================================================================

# D-ID API (for photorealistic AI avatar)
# Get from: https://studio.d-id.com/account-settings
# Optional - core features work without this
DID_API_KEY=your-d-id-api-key-here

# Agora.io (for WebRTC video calls)
# Get from: https://console.agora.io/
# Optional - required for video call features
NEXT_PUBLIC_AGORA_APP_ID=your-agora-app-id-here
AGORA_APP_CERTIFICATE=your-agora-app-certificate-here

# =============================================================================
# Application Settings
# =============================================================================

# Next.js Environment
NODE_ENV=development

# Application URL (used for redirects and callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Session secret (generate a random string)
SESSION_SECRET=your-session-secret-here

# =============================================================================
# Optional Features
# =============================================================================

# Analytics (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry Error Tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# Development
# =============================================================================

# Enable debug logging
DEBUG=false

# Mock API responses (useful for development without API keys)
USE_MOCK_APIS=true
